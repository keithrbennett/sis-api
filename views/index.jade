doctype html
html(lang="en", ng-app="sisui")
    head
        title SIS
        script(src="http://code.jquery.com/jquery-1.11.0.js")
        script(src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular.min.js")
        script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.14/angular-route.min.js")
        script(src=prefix + 'public/app/lib/ui.bootstrap/ui-bootstrap-tpls-0.10.0.min.js')

        script(src=prefix + 'public/js/sis-js.js')
        script(src=prefix + 'public/app/js/app.js')
        script(src=prefix + 'public/app/js/controllers/login.js')
        script(src=prefix + 'public/app/js/controllers/schemas.js')
        script(src=prefix + 'public/app/js/controllers/entities.js')
        script(src=prefix + 'public/app/js/controllers/sidebar.js')

        link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootswatch/3.1.1/flatly/bootstrap.min.css")
        link(rel="stylesheet", href=prefix + "public/app/css/style.css")
    body(data-target=".nav-toc")
        header(class='navbar navbar-default navbar-static-top')
            div(class="container")
                div(class="navbar-header")
                    a(href=prefix, class="navbar-brand") SIS
                div(class="collapse navbar-collapse")
                    ul(class="nav navbar-nav")
                        li: a(href=prefix + 'docs') API
        div(class="container")
            div(class="row")
                div(class="col-md-9", ng-view)
                ng-include(src="'" + prefix + "public/app/partials/sidebar.html'")

